@using Sociolite.Models

<div hidden="@Hide" class="card m-2" style="background-color: rgba(25, 25, 25, .5); position: fixed; z-index: 10; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 100%; height: 100%;">
    <div style="background-color: white; position: fixed; z-index: 10; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <div style="display: flex;">
            <div style="background-color: mediumpurple; color: white; width: -webkit-fill-available;">@Header</div>
            <button style="background-color: indianred; color: white; width: 50px;" @onclick="HidePopUp">x</button>
        </div>
        <div>@Message</div>
        <div><button @onclick="HidePopUp">Ok</button></div>
    </div>
</div>

@code {

    [Parameter]
    public string Header { get; set; }

    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public bool Hide { get; set; }

    public void HidePopUp()
    {
        Hide = true;
    }
}